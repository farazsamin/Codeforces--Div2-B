/*
Problem Link :  https://codeforces.com/problemset/problem/266/B


Approach 		 :  Consider the ascii value of G and B. If ascii value of s[i] is less than ascii value of s[i+1], then swap it. Repeat this steps m times . Then print the answer.
*/

#include<bits/stdc++.h>
using namespace std;
#define ll long long int 
 
 
int main()
{
  ll t,n,m;
  
  	cin>>n>>m;
  	string s;
  	cin>>s;
  	while(m--){
  	for(int i=1;i<n;i++){
  	   if(s[i]>s[i-1]){
  	   		swap(s[i],s[i-1]);
  	   		i++;

		 }	
	   }
    }
	
	for(int i=0;i<n;i++)
	  cout<<s[i];
    cout<<endl;

	 
}
